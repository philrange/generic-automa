<h3>Select Difficulty for <%= @game.title %></h3>

<% @game.difficulty_modes.each do |difficulty_mode| %>
  <p>
      <%= link_to difficulty_mode.name, game_select_difficulty_play_index_path(:game_id => @game.id, :select_difficulty_id => difficulty_mode.id), class: 'btn btn-success btn-lg btn-block' %>
  </p>
 
<% end %>